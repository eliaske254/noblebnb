<div class="min-h-full flex">
  <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <img class="h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">Create a new account</h2>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mt-8">
        <div>
          <div>
            <p class="text-sm font-medium text-gray-700">Register with</p>

            <div class="mt-1 grid grid-cols-1 gap-0">
              <div>
                <a href="/users/auth/google" data-method="post" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                  <span class="sr-only">Sign in with Google</span>
                 Google
                </a>
              </div>


            </div>
          </div>

          <div class="mt-6 relative">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500"> Or continue with </span>
            </div>
          </div>
        </div>

        <div class="mt-6">
          <form action="<%= registration_path(resource_name) %>" method="POST" class="space-y-6">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700"> Email address </label>
              <div class="mt-1">
                <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              </div>
            </div>

            <div class="space-y-1">
              <label for="password" class="block text-sm font-medium text-gray-700"> Password </label>
              <div class="mt-1">
                <input autocomplete="new-password" type="password" name="user[password]" id="user_password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              </div>
            </div>
            <div class="space-y-1">
              <label for="password" class="block text-sm font-medium text-gray-700"> Password confirmation</label>
              <div class="mt-1">
                <input autocomplete="new-password" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" >
              </div>
            </div>

            <div>
              <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Register</button>
            </div>

            <div>
              <div class="text-sm space-y-4">
                <a href="<%= new_password_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password? </a>

                <a href="<%= new_session_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500"> Already registered? </a>

                <a href="<%= new_user_confirmation_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500">Didn't receive confirmation instructions?</a>

                <a href="<%= new_unlock_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500">Didn't receive unlock instructions?</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="hidden lg:block relative w-0 flex-1">
    <img class="absolute inset-0 h-full w-full object-cover" src="https://images.unsplash.com/photo-1505904267569-f02eaeb45a4c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1908&q=80" alt="">
  </div>
</div>