
<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Sign in to your account</h2>

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= render "devise/shared/notices" %>

    </div>
    <form class="mt-8 space-y-6" action="#" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700"> Email address </label>
          <div class="mt-1">
            <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>
        <div class="space-y-1">
          <label for="password" class="block text-sm font-medium text-gray-700"> Password </label>
          <div class="mt-1">
            <input autocomplete="new-password" type="password" name="user[password]" id="user_password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <input id="remember-me" name="user[remember-me]" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
          <label for="remember-me" class="ml-2 block text-sm text-gray-900"> Remember me </label>
        </div>
          <% end %>

      </div>

      <div>
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <!-- Heroicon name: solid/lock-closed -->
            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          Sign in
        </button>
      </div>

      <div>
        <div class="text-sm space-y-4">
          <a href="<%= new_password_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password? </a>

          <a href="<%= new_registration_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500"> Register a new account </a>

          <a href="<%= new_user_confirmation_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500">Didn't receive confirmation instructions?</a>

          <a href="<%= new_unlock_path(resource_name) %>" class="block font-medium text-indigo-600 hover:text-indigo-500">Didn't receive unlock instructions?</a>
        </div>
      </div>
    </form>
  </div>
</div>
