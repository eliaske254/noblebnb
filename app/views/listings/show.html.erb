<h1 class="text-2xl font-bold mb-4"><%= @listing.title%></h1>

<div>
  Per night <%= number_to_currency(@listing.nightly_price / 100, precision: 0 )%>
</div>
<div>
 Cleaning fee <%= number_to_currency(@listing.cleaning_fee / 100, precision: 0 )%>
</div>

<form action="/reservations" method="post" data-turbo="false">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="reservation[listing_id" value="<%= @listing.id %>">
  <button type="submit" class="w-32 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 font-extrabold">Reserve</button>
</form>

<%= @listing.city %> <%= @listing.state %>

<p>
  <%= @listing.about %>
</p>

<p>
  <%= @listing.max_guests %>
</p>
  <% @listing.photos.each do |photo| %>
    <% if photo.file.attached? %>
        <%= image_tag photo.file.variant(:thumb)  %>
  <% end %>
  <% end %>


<ul>
  <% @listing.rooms.each do |room| %>
  <li><%= room.room_type %> beds: <%= room.beds.count %></li>
  <% end %>
</ul>

<div>
  <h4>Host</h4>
  <%= @listing.host.email %>
</div>

